{
  // PowerShell settings
  "powershell.scriptAnalysis.enabled": true,
  "powershell.scriptAnalysis.settingsPath": "build/PSScriptAnalyzerSettings.psd1",
  "powershell.codeFormatting.preset": "OTBS",

  // Editor defaults for consistent formatting
  "editor.insertSpaces": true,
  "editor.tabSize": 4,

  // File formatting
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // Markdown formatting
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.wordWrap": "on"
  },

  // JSON formatting
  "[json]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },

  // YAML formatting
  "[yaml]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },

  // C# settings
  "[csharp]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true
  },

  // PowerShell formatting
  "[powershell]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true
  }
}
